<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thoughts</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="shortcut icon" href="/assets/ico/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
</head>
<body>
    <nav id="navbar">
        <a href="/" id="logo">
            <img src="/assets/images/toughts_logo.png" alt="icone de uma lampada acessa">
        </a>
        <ul>
            <li><a href="/">Pensamentos</a></li>
            {{#if session.userid}}
            <li><a href="/thoughts/dash">Dashboards</a></li>
            <li><a href="/logout">Sair</a></li>

            {{else}}
            <li><a href="/login">Entrar</a></li>
            <li><a href="/register">Registrar</a></li>
            {{/if}}
        </ul>
    </nav>
    <div class="container">
        {{!-- mensagens --}}
        {{#if messages.message}}
            <div class="message">
                {{messages.message}}
                <button onclick="closeMessage()"><span><i class="bi bi-x"></i></span></button>
            </div>
        {{/if}}
        {{{body}}}
    </div>
    <footer>
        <p><span>Thoughts</span>&copy; 2022</p>
    </footer>

    <script>
        
        const message = document.querySelector('.message')

        const closeMessage = () => {
            return message.classList.add('close')
        }

        
    </script>
</body>
</html>
